@{
    ViewData["Title"] = "New Event Page";
}
@model Event

<h1>Dojo Activity Center</h1>
<a href="/dashboard">Home</a>
<a href="/logout">Logout</a>
<h2>Create an Activity</h2>
<form asp-action="CreateEvent" method="POST" class="col-5 mx-auto">
    <div class="form-group">
        <span asp-validation-for="Title"></span><br>
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="Time"></span><br>
        <label asp-for="Time"></label>
        <input asp-for="Time" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="Date"></span><br>
        <label asp-for="Date"></label>
        <input asp-for="Date" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="DurationAmount"></span><br>
        <label asp-for="DurationAmount"></label>
        <input asp-for="DurationAmount" class="form-control">
        <select asp-for="DurationType" class="form-control">
            <option></option>
            <option value="Minutes">Minutes</option>
            <option value="Hours">Hours</option>
            <option value="Days">Days</option>
        </select>
    </div>
    <div class="form-group">
        <span asp-validation-for="Description"></span><br>
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control">
    </div>
    <div>
        <input type="submit" value="Create Activity" class="btn btn-lg btn-primary">
    </div>
</form>