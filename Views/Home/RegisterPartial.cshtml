@model User

<form asp-action="Register" method="POST" class="col-5 mx-auto">
    <div class="form-group">
        <span asp-validation-for="Name"></span><br>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="Email"></span><br>
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="Password"></span><br>
        <label asp-for="Password"></label>
        <input type="password" asp-for="Password" class="form-control">
    </div>
    <div class="form-group">
        <span asp-validation-for="ConfirmPassword"></span><br>
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" class="form-control">
    </div>
    <div>
        <input type="submit" value="Register" class="btn btn-lg btn-primary">
    </div>
</form>